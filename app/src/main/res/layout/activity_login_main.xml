<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/ao6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/aoq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/tv_phone_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@drawable/selector_common_btn_text_color"
        android:text="手机号登录"
        android:background="@drawable/selector_common_btn"
        android:layout_width="330dp"
        android:layout_height="45dp" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_phone_login"
        android:id="@+id/tv_register"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@drawable/selector_common_btn_text_color"
        android:text="注册"
        android:background="@drawable/selector_common_btn"
        android:layout_width="330dp"
        android:layout_height="45dp" />

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/ll_other_login_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color666666"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:text="其他登录方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:textSize="10sp"
               android:textColor="@color/color999999"
               android:drawableTop="@drawable/aov"
               android:layout_weight="1"
               android:gravity="center"
               android:drawablePadding="5dp"
               android:text="微信"
               android:layout_width="0dp"
               android:layout_height="wrap_content" />
            <TextView
                android:textSize="10sp"
                android:textColor="@color/color999999"
                android:drawableTop="@drawable/aor"
                android:layout_weight="1"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="微信"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="10sp"
                android:textColor="@color/color999999"
                android:drawableTop="@drawable/aot"
                android:layout_weight="1"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="微信"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="10sp"
                android:textColor="@color/color999999"
                android:drawableTop="@drawable/aoo"
                android:layout_weight="1"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="微信"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>