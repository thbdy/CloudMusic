<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.from206.cloudmusic.view.roundimage.RoundedImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        app:riv_corner_radius="3dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_cover"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <View
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_shadow_class_bottom"
        android:layout_alignEnd="@id/iv_cover"
        android:layout_alignStart="@id/iv_cover"
        android:layout_width="120dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/tv_author"
        android:textSize="10sp"
        android:layout_margin="5dp"
        android:layout_alignBottom="@id/iv_cover"
        android:layout_alignStart="@+id/iv_cover"
        android:textColor="@color/colorEEEEEE"
        android:text="潇洒小编"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/color666666"
        android:id="@+id/tv_name"
        android:maxLines="2"
        android:layout_below="@+id/iv_cover"
        android:layout_alignStart="@id/iv_cover"
        android:layout_alignEnd="@id/iv_cover"
        android:width="120dp"
        android:text="测擦拭大测擦拭大测擦拭大测擦拭大测擦拭大"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>